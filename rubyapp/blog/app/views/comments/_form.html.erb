<%= form_for( [@post, @post.comments.build] ) do |f| %>
  <p>
    <%= f.label :commenter, "Commenter" %><br />
    <%= f.text_field :commenter %>
  </p>

  <p>
    <%= f.label :body, "comment" %><br />
    <%= f.text_area :body, cols: 60, rows: 8 %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>