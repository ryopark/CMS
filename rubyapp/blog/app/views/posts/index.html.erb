<h1>All articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Contents</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text[0..5] %></td>
      <td><%= link_to 'detail', post %></td>
      <td><%= link_to 'edit', edit_post_path(post) %></td>
      <td><%= link_to 'delete', post_path(post),
              method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Article', new_post_path %>